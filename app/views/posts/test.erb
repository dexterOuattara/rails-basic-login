<div class="content">
<% if @posts.any? %>
 <table>
     <thead>
     <tr>
     <th>Title</th>
         <th>Content</th>
     </tr>
     </thead>
     <tbody>
     <% @posts.each do |post| %>
         <tr>
     <td><%= post.title %></td>
           <td><%= post.content %></td>
     </tr>
       <% end %>
     </tbody>
     </table>
 <% else %>


 <p>There are no posts!</p>
  <% end %>
</div>