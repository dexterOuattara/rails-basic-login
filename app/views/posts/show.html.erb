<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong> <br>
  <%= image_tag(@post.image, size: "500x500") %>
</p>

<p>
  <strong>Description:</strong>
  <%= sanitize @post.description, :length => 100  %>
</p>



<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
