
<h3>LATEST ARTICLE</h3>
<div class="row">
  <% if @posts.any? %>

    <% @posts.each do |post| %>
      <div class="col-md-12 customizeCard">
        <div class="card">
          <%= link_to image_tag(post.image,  alt: "Edit Entry", class:"card-img-top", size: "300x200" ) , post %>
          <div class="card-body">
            <p class="card-text">
              <%= post.category.tag %>
              <br>
              <%= post.title %>
            </p>
          </div>
          <div class="card-footer text-black">
            <%= post.user.surname %> <%= post.user.name %>
            <%= post.created_at.to_s(:short) %>
            <% if current_user %>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td><%= link_to 'Show', post %></td>
            <% end %>
          </div>
        </div>
      </div>

    <% end %>
  <% else %>

    <p class="text-center">
      There are no record for your request! <br>
      <%= image_tag("nocontent22.jpg", :alt => "no content", size:"00x400") %>
    </p>

  <% end %>
</div>