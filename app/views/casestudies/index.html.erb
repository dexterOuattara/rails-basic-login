<%= link_to 'New Post', new_casestudy_path %>




<div class="container">
  <div class="row align-items-start">

    <div class="col-md-9">
      <div class="row">

        <% if @casestudies.any? %>



          <% @casestudies.each do |casestudy| %>

            <div class="col-md-6">
              <div class="card">
                <%= link_to image_tag(casestudy.image,  alt: "Edit Entry", class:"card-img-top", size: "300x200" ) , casestudy %>

                <div class="card-body">

                  <p class="card-text">
                    <%= casestudy.category.tag %>
                    <br>
                    <%= casestudy.title %>
                  </p>
                </div>
                <div class="card-footer text-black">

                  <strong> <%= casestudy.user.surname %> <%= casestudy.user.name %>
                    <%= casestudy.created_at.to_s(:short) %>
                    <% if current_user %>
                      <td><%= link_to 'Edit', edit_casestudy_path(casestudy) %></td>
                      <td><%= link_to 'Destroy', casestudy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% else %>
                      <td><%= link_to 'Show', casestudy %></td>

                    <% end %>
                  </strong>

                </div>
              </div>
            </div>

          <% end %>
        <% else %>

          <p class="text-center">
            There are no record for your request! <br>
            <%= image_tag("nocontent22.jpg", :alt => "no content", size:"00x400") %>
          </p>

        <% end %>
      </div>
    </div>








    <div class="col-md-3">
      <%#= render 'layouts/search' %>
      <div class="card-header">
        Categories
      </div>

      <div class="card-body">

        <ul class="list-group">

          <% @categories.each do |category| %>


            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to category.tag, casestudies_path(:cate => category.id) %>

<!--              <span class="badge badge-primary badge-pill text-primary"><%#= category.casestudies.count %></span>-->
            </li>
          <% end %>


        </ul>
      </div>

    </div>

  </div>
</div>
</div>
</div>

</div>
