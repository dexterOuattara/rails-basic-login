<p id="notice"><%= notice %></p>

<h1>Casestudies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slug</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @casestudies.each do |casestudy| %>
      <tr>
        <td><%= casestudy.title %></td>
        <td><%= casestudy.description %></td>
        <td><%= casestudy.slug %></td>
        <strong> <%= casestudy.user.surname %> <%= casestudy.user.name %> </strong>
          <td><%= casestudy.category.tag %></td>
        <td><%= link_to 'Show', casestudy %></td>
        <td><%= link_to 'Edit', edit_casestudy_path(casestudy) %></td>
        <td><%= link_to 'Destroy', casestudy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

