<br><br>

<%= link_to 'New Post', new_casestudy_path %>

<div class="container">
  <div class="row align-items-start">

    <div class="col-md-9">
      <div class="row">

        <% if @casestudies.any? %>

          <% @casestudies.each do |casestudy| %>

            <div class="col-xs-12 col-md-6 col-lg-6 customizeCard">
              <div class="card">
                <%= link_to image_tag(casestudy.image, alt: "Edit Entry", class: "card-img-top", size: "300x200"), casestudy %>
                <div class="card-footer transparent">
                  <strong class="card-text category">
                    <!--                    <span class="badge bg-primary"><%#= casestudy.casecategory.tag %></span>-->
                  </strong>
                  <br>
                  <strong class="card-text title">
                    <%= truncate(casestudy.title, length: 50) %>
                  </strong>
                </div>
              </div>
            </div>

          <% end %>
        <% else %>

          <p class="text-center">
            There are no record for your request! <br>
            <%= image_tag("nocontent22.jpg", :alt => "no content", size: "00x400") %>
          </p>

        <% end %>
      </div>
    </div>


    <div class="col-md-3">
      <%#= render 'layouts/search' %>
      <div class="card-header">
        Categories
      </div>

      <div class="card-body">

        <ul class="list-group">

          <% @casecategories.each do |casecategory| %>


            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to casecategory.tag, casecategories_path(:cate => casecategory.id) %>
            </li>
          <% end %>


        </ul>
      </div>

    </div>

  </div>
</div>
</div>
</div>

</div>
