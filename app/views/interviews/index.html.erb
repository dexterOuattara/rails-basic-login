<p id="notice"><%= notice %></p>



<br><br>

<%= link_to 'New Interview', new_interview_path %>

<div class="row">
  <%= render 'layouts/searchInterview' %>
</div>


<div class="container">

  <div class="row align-items-start">

    <div class="col-md-9">
      <div class="row">

        <% if @interviews.any? %>

          <% @interviews.each do |interview| %>

            <div class="col-xs-12 col-md-4 col-lg-4 customizeCard">
              <div class="card">
                <%= link_to image_tag(interview.image, alt: "Edit Entry", class: "card-img-top", size: "300x200"), interview %>
                <div class="card-footer transparent">
                  <strong class="card-text category">
                    <span class="badge bg-primary">
                    <%= link_to interview.interviewcategory.tag, interviews_path(:cate => interview.interviewcategory.id) %>
                    </span>

                  </strong>
                  <br>
                  <strong class="card-text title">
                    <%= truncate(interview.title, length: 50) %>
                  </strong>
                </div>
              </div>
            </div>

          <% end %>
        <% else %>

          <p class="text-center">
            There are no record for your request! <br>
            <%= image_tag("nocontent22.jpg", :alt => "no content", size: "00x400") %>
          </p>

        <% end %>
      </div>
    </div>


    <div class="col-md-3">
      <div class="card-header">
        Categories
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% @interviewcategories.each do |interviewcategory| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to interviewcategory.tag, interviews_path(:cate => interviewcategory.id) %>
              <span class="badge bg-secondary"><%= interviewcategory.interviews.count %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>


  </div>
</div>
</div>
</div>

</div>
